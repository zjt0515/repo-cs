{
  "name": "chisel",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@8.3.1",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "scripts": {
    "build": "vite build",
    "prepare": "husky",
    "lint": "pnpm -F @chisel/admin lint",
    "dev": "pnpm -F @chisel/editor dev",
    "ui:build": "pnpm -F @chisel/ui build",
    "play:v3": "pnpm -F @chisel/ui build && pnpm -F @chisel/playground-vue3 dev",
    "play:v2": "node ./scripts/play2.js",
    "rei": "pnpm clear && pnpm install -r",
    "clear": "rimraf --glob pnpm-lock.yaml ./node_modules ./packages/**/node_modules ./packages/**/dist",
    "s:dev": "pnpm -F @chisel/server dev"
  },
  "lint-staged": {
    "*.{js,ts,vue}": "pnpm lint"
  },
  "config": {
    "commitizen": {
      "path": "cz-vinyl"
    }
  },
  "pnpm": {
    "packageExtensions": {
      "vue-template-compiler": {
        "dependencies": {
          "vue": "^2.7.16"
        }
      },
      "vue-template-compiler@2.7.16": {
        "dependencies": {
          "vue": "^2.7.16"
        }
      }
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "cz-vinyl": "^2.5.1",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.4",
    "rimraf": "^5.0.7",
    "zx": "^8.1.1"
  },
  "dependencies": {
    "eslint": "^9.39.2",
    "prettier": "3.6.2"
  }
}
