{
  "name": "@chisel/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20.19.0 || >=22.12.0"
  },
  "main": "./dist/vue3/chisel.umd.cjs",
  "module": "./dist/vue3/chisel.js",
  "types": "./dist/vue3/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/vue3/chisel.js",
      "require": "./dist/vue3/chisel.umd.cjs",
      "types": "./dist/vue3/main.d.ts"
    },
    "./style": {
      "import": "./dist/vue3/chisel.css",
      "require": "./dist/vue3/chisel.css"
    },
    "./vue2": {
      "import": "./dist/vue2/chisel.js",
      "require": "./dist/vue2/chisel.umd.cjs",
      "types": "./dist/vue2/main.d.ts"
    },
    "./vue2/style": {
      "import": "./dist/vue2/chisel.css",
      "require": "./dist/vue2/chisel.css"
    }
  },
  "scripts": {
    "dev": "pnpm switch:v3 && vue-tsc && vite build --watch",
    "type-check": "vue-tsc",
    "lint": "eslint . --fix",
    "format": "prettier --write src/",
    "build-only": "vite build",
    "check-build": "pnpm type-check && pnpm build-only",
    "build": "pnpm clear:dist && pnpm build:v3 && pnpm build:v2",
    "build:v3": "pnpm switch:v3 && vue-tsc && vite build",
    "build:v2": "pnpm switch:v2 && vue-tsc && vite build",
    "switch:v3": "vue-demi-switch 3 vue3",
    "switch:v2": "vue-demi-switch 2 vue2",
    "clear": "rimraf dist ./node_modules",
    "clear:dist": "rimraf dist"
  },
  "dependencies": {
    "@vue/composition-api": "^1.7.2",
    "vue-demi": "^0.14.7",
    "vue2": "npm:vue@~2.6.14",
    "vue2.7": "npm:vue@~2.7.16",
    "vue3": "npm:vue@~3"
  },
  "devDependencies": {
    "@sinclair/typebox": "^0.34.41",
    "@tsconfig/node22": "^22.0.2",
    "@types/node": "^22.16.5",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vue/eslint-config-prettier": "^10.2.0",
    "@vue/eslint-config-typescript": "^14.6.0",
    "@vue/tsconfig": "^0.7.0",
    "eslint": "^9.31.0",
    "eslint-plugin-vue": "~10.3.0",
    "jiti": "^2.4.2",
    "npm-run-all2": "^8.0.4",
    "prettier": "3.6.2",
    "sass": "^1.91.0",
    "typescript": "~5.8.0",
    "vite": "^7.0.6",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-vue-devtools": "^8.0.0",
    "vite-plugin-vue2": "^2.0.3",
    "vue-tsc": "^3.0.4"
  }
}
